<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sdist.calculadoramaizoro.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="79dp"
                android:layout_height="38dp"
                android:text="@string/numero_1"
                android:id="@+id/textView"
                android:layout_row="0"
                android:layout_column="0" />

            <EditText
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:inputType="number"
                android:layout_row="0"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numero_2"
                android:id="@+id/textView2"
                android:layout_row="1"
                android:layout_column="0" />

            <EditText
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText2"
                android:inputType="number"
                android:layout_row="1"
                android:layout_column="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CL"
                android:id="@+id/button6"
                android:onClick="clear"
                android:layout_row="2"
                android:layout_column="0" />

            <Button
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:text="@string/suma"
                android:id="@+id/button"
                android:onClick="suma"
                android:layout_row="2"
                android:layout_column="1" />

            <Button
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:text="Resta"
                android:id="@+id/button2"
                android:onClick="resta"
                android:layout_row="3"
                android:layout_column="1" />

            <Button
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:text="Divide"
                android:id="@+id/button3"
                android:onClick="divide"
                android:layout_row="4"
                android:layout_column="1" />

            <Button
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:text="Multiplica"
                android:id="@+id/button4"
                android:onClick="multiplica"
                android:layout_row="5"
                android:layout_column="1" />

            <Button
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:text="Potencia"
                android:id="@+id/button5"
                android:onClick="potencia"
                android:layout_row="6"
                android:layout_column="1" />

        </GridLayout>
    </LinearLayout>
</RelativeLayout>
